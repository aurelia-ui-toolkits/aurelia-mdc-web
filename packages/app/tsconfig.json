{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@aurelia-mdc-web/*": [
        "../*/src"
      ]
    },
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "newLine": "lf"
  },
  "include": [
    "src"
  ],
  "files": [
    "src/resource.d.ts"
  ],
  "exclude": []
}
