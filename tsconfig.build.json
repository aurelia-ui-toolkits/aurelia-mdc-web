{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2018",
    "lib": ["esnext", "dom"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "newLine": "lf",
    "downlevelIteration": true
  },
  "exclude": [
    ".vscode",
    "dist",
    "doc",
    "node_modules",
    "test",
    "karma.conf.ts"
  ]
}
