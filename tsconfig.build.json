{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "target": "ES2022",
    "lib": [
      "esnext",
      "dom"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "forceConsistentCasingInFileNames": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "newLine": "lf",
    "downlevelIteration": true,
    "isolatedModules": true
  },
  "exclude": [
    ".vscode",
    "dist",
    "doc",
    "node_modules",
    "test",
    "karma.conf.ts"
  ]
}
